<%= turbo_frame_tag pokemon do %>
  <%= bootstrap_form_with(model: pokemon) do |form| %>
    <div class="row py-2 border-top">
      <div class="col-3">
        <%= form.text_field :name,
                            skip_label: true,
                            label_as_placeholder: true,
                            wrapper: false,
                            control_class: "form-control form-control-sm"
        %>
      </div>
      <div class="col-3">
        <%= form.number_field :pokedex_number,
                              skip_label: true,
                              label_as_placeholder: true,
                              wrapper: false,
                              control_class: "form-control form-control-sm"
        %>
      </div>
      <div class="col-3">
        <%= form.number_field :total_base_stats,
                              skip_label: true,
                              label_as_placeholder: true,
                              wrapper: false,
                              control_class: "form-control form-control-sm"
        %>
      </div>
      <div class="col-3">
        <div class="d-flex justify-content-end">
          <%= form.primary class: "btn btn-primary btn-sm me-2" %>
          <%= link_to "キャンセル", pokemon, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
  <% end %>
<% end %>
