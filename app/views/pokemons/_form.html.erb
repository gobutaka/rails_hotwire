<%= turbo_frame_tag pokemon do %>
  <%= bootstrap_form_with(model: pokemon, data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <%= form.text_field :name %>
    <%= form.text_field :pokedex_number %>
    <%= form.text_field :total_base_stats %>
    <%= form.primary %>
  <% end%>
<% end %>
