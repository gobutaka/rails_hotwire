<!-- 見出し -->
<h4 class="fw-bold">
  <span>ポケモン</span>
</h4>

<!-- 検索フォーム -->
<div class="card shadow mt-3">
  <div class="card-header">
    <%= icon_with_text("search", "検索条件") %>
  </div>

  <div class="card-body">
    <%= search_form_for @search, html: { data: { turbo_frame: "pokemons-list" } } do |f| %>
      <div class="row g3 mb-3">
        <div class="col-3 col-xl-2">
          <%= f.label :name_cont, "名前", class: "form-label" %>
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>
        <div class="col-3 col-xl-2">
          <%= f.label :pokedex_number_eq, "図鑑No.", class: "form-label" %>
          <%= f.search_field :pokedex_number_eq, class: "form-control" %>
        </div>
        <div class="col-3 col-xl-2">
          <%= f.label :total_base_stats_eq, "合計種族値", class: "form-label" %>
          <%= f.search_field :total_base_stats_eq, class: "form-control" %>
        </div>
        <div class="col-3 d-flex align-items-end">
          <%= button_tag(icon_with_text("search", "検索"), class: "btn btn-primary me-1") %>
          <%= link_to "リセット", pokemons_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- 一覧 -->
<div class="card shadow mt-3">
  <div class="card-header">
    <%= icon_with_text("table", "一覧") %>
  </div>

  <div class="card-body mx-3">
    <%= turbo_frame_tag "pokemons-list" do %>
      <div class="row py-2">
        <div class="col-3 mt-auto">
          <%= sort_link(@search, :name) %>
        </div>
        <div class="col-3 mt-auto">
          <%= sort_link(@search, :pokedex_number) %>
        </div>
        <div class="col-3 mt-auto">
          <%= sort_link(@search, :total_base_stats) %>
        </div>
        <div class="col-3 d-flex justify-content-end">
          <%= link_to icon_with_text("plus-circle", "登録"),
                      new_pokemon_path,
                      class: "btn btn-outline-primary",
                      data: { turbo_frame: "new_pokemon" }
          %>
        </div>
      </div>

      <%= turbo_frame_tag "new_pokemon" %>
      <div id="pokemons">
        <%= render @pokemons %>
      </div>

      <div class="d-flex justify-content-end mt-3">
        <%= paginate @pokemons %>
      </div>
    <% end %>
  </div>
</div>
