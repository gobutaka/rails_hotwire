<div class="row py-2 border-top">
  <div class="col-3 my-auto">
    <%= pokemon.name %>
  </div>
  <div class="col-3 my-auto">
    <%= pokemon.pokedex_number %>
  </div>
  <div class="col-3 my-auto">
    <%= pokemon.total_base_stats %>
  </div>
  <div class="col-3">
    <div class="d-flex justify-content-end">
      <%= link_to "編集", edit_pokemon_path(pokemon), class: "btn btn-sm btn-outline-primary me-2" %>
      <%= button_to "削除", pokemon, method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
</div>
